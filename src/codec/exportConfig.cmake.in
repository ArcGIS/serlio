include(${CMAKE_CURRENT_LIST_DIR}/serlio_codecTargets.cmake)

set(SERLIO_CODEC_PROJECT serlio_codec)
find_path(SERLIO_CODEC_INSTALL_PATH NAMES "cmake/${SERLIO_CODEC_PROJECT}Config.cmake" PATHS ${CMAKE_CURRENT_LIST_DIR}/..)

set(SERLIO_CODEC_INCLUDE_PATH ${SERLIO_CODEC_INSTALL_PATH}/include)

find_file(
	SERLIO_CODEC_LINK_LIBRARY
	${CMAKE_SHARED_LIBRARY_PREFIX}${SERLIO_CODEC_PROJECT}${CMAKE_SHARED_LIBRARY_SUFFIX}
	PATHS ${SERLIO_CODEC_INSTALL_PATH}/lib
)

set(SERLIO_CODEC_EXT_LIBRARIES)
list(APPEND SERLIO_CODEC_EXT_LIBRARIES "${SERLIO_CODEC_INSTALL_PATH}/lib/${CMAKE_SHARED_LIBRARY_PREFIX}${SERLIO_CODEC_PROJECT}${CMAKE_SHARED_LIBRARY_SUFFIX}")

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(${SERLIO_CODEC_PROJECT} DEFAULT_MSG SERLIO_CODEC_LINK_LIBRARY SERLIO_CODEC_INCLUDE_PATH)
